{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "weekdays": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]
      }
    },
    "hours": {
      "type": "string",
      "enum": ["6:00AM", "6:15AM", "6:30AM", "6:45AM", "7:00AM", "7:15AM", "7:30AM", "7:45AM", "8:00AM", "8:15AM", "8:30AM", "8:45AM", "9:00AM", "9:15AM", "9:30AM", "9:45AM", "10:00AM", "10:15AM", "10:30AM", "10:45AM", "11:00AM", "11:15AM", "11:30AM", "11:45AM", "12:00PM", "12:15PM", "12:30PM", "12:45PM", "1:00PM", "1:15PM", "1:30PM", "1:45PM", "2:00PM", "2:15PM", "2:30PM", "2:45PM", "3:00PM", "3:15PM", "3:30PM", "3:45PM", "4:00PM", "4:15PM", "4:30PM", "4:45PM", "5:00PM", "5:15PM", "5:30PM", "5:45PM", "6:00PM", "6:15PM", "6:30PM", "6:45PM", "7:00PM", "7:15PM", "7:30PM", "7:45PM", "8:00PM", "8:15PM", "8:30PM", "8:45PM", "9:00PM", "9:15PM", "9:30PM", "9:45PM", "10:00PM", "10:15PM", "10:30PM", "10:45PM", "11:00PM", "11:15PM", "11:30PM", "11:45PM", "12:00AM", "12:15AM", "12:30AM", "12:45AM", "1:00AM", "1:15AM", "1:30AM", "1:45AM", "2:00AM", "2:15AM", "2:30AM", "2:45AM", "3:00AM", "3:15AM", "3:30AM", "3:45AM", "4:00AM", "4:15AM", "4:30AM", "4:45AM", "5:00AM", "5:15AM", "5:30AM", "5:45AM"]
    },
    "address": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string",
          "title": "Street Address"
        },
        "city": {
          "type": "string",
          "title": "City"
        },
        "state": {
          "type": "string",
          "title": "State"
        },
        "zip": {
          "type": "number",
          "title": "Zip Code",
          "minLength": 5
        }
      },
      "XXXrequired": [
        "street_address",
        "city",
        "state"
      ]
    }
  },
  "id": "bottomless_brunch_venue",
  "type": "object",
  "name": "Venue",
  "properties": {
    "id": {
      "type": "number",
      "title": "Venue ID"
    },
    "name": {
      "type": "string",
      "title": "Venue Name"
    },
    "images": {
      "type": "array",
      "title": "Images",
      "items": {
        "type": "object",
        "properties": {
          "fileName": { 
            "type": "string",
            "title": "File Name"
          },
          "type": { 
            "type": "string",
            "title": "Image Type"
          }
        }
      }
    },
    "region": { 
      "type": "string",
      "title": "Metro Area",
      "enum": [
        "Austin, TX",
        "Chicago, IL",
        "Los Angeles, CA",
        "New York, NY",
        "Philadelphia, PA",
        "San Diego, CA",
        "San Francisco, CA",
        "San Jose, CA"
      ]
    },
    "address": {
      "title": "Address",
      "$ref": "#/definitions/address"
    },
    "position": {
      "type": "object",
      "properties": {
        "lat": {
          "type": "number",
          "title": "Latitude"
        },
        "lng": {
          "type": "number",
          "title": "Longitude"
        }
      }
    },
    "phone": {
      "type": "string",
      "title": "Phone Number"
    },
    "hours": {
      "type": "array",
      "title": "Hours",
      "items": {
        "type": "object",
        "properties": {
          "category": { 
            "type": "string",
            "title": "Category",
            "enum": [
              "Happy Hour",
              "Reverse Happy Hour",
              "Bottomless Brunch",
              "Other"
            ]
          },
          "starts": { 
            "title": "Starts",
            "$ref": "#/definitions/hours"
          },
          "ends": { 
            "title": "Ends",
            "$ref": "#/definitions/hours"
          },
          "days": {
            "title": "Days",
            "$ref": "#/definitions/weekdays",
            "uniqueItems": true
          }
        }
      }
    },
    "menu_items": {
      "type": "array",
      "title": "Menu Items",
      "items": {
        "type": "object",
        "properties": {
          "item": { 
            "type": "string",
            "title": "Menu Item"
          },
          "price": { 
            "type": "number",
            "title": "Price"
          }
        }
      }
    },
    "full_bar": {
      "type": "boolean",
      "title": "Full Bar?",
      "default": false
    },
    "links": {
      "title": "External Links",
      "type": "object",
      "properties": {
        "website": {
          "title": "Website URL",
          "type": "string"
        },
        "facebook": {
          "title": "Facebook URL",
          "type": "string"
        },
        "yelp": {
          "title": "Yelp URL",
          "type": "string"
        },
        "openTable": {
          "title": "OpenTable URL",
          "type": "string"
        },
        "tripAdvisor": {
          "title": "TripAdvisor URL",
          "type": "string"
        },
        "zagat": {
          "title": "Zagat URL",
          "type": "string"
        },
        "zomato": {
          "title": "Zomato URL",
          "type": "string"
        }
      }
    },
    "description": {
      "type": "string",
      "title": "Description"
    },
    "devNotes": {
      "type": "string",
      "title": "Developer Notes"
    }
  }
}
